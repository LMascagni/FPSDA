void stampaCampo(int campo[ALTEZZA_MAX_CAMPO][LARGHEZZA_MAX_CAMPO])
{
    int i, j;
    
    for (i = 0; i < ALTEZZA_MAX_CAMPO; i++)
    {
        printf("%2d", ALTEZZA_MAX_CAMPO - i - 1 );
        for (j = 0; j < LARGHEZZA_MAX_CAMPO; j++)
        {
            if (campo[ALTEZZA_MAX_CAMPO - i - 1][j] == 0)
            {
                printf("|   ");
            }
            else
            {
                printf("| * ");
            }
        }
        printf("|\n");
    }
    printf("  ");
    for (j = 0; j < LARGHEZZA_MAX_CAMPO; j++)
    {
        printf("%3d ", j);
    }
    printf("\n");
}








