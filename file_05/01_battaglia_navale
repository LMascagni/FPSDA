#include <stdlib.h>
#include <stdio.h>

#define ALTEZZA_MAX_CAMPO 15
#define LARGHEZZA_MAX_CAMPO 15
#define LUNGHEZZA_MAX_STRINGA 32

int piazzaNave(char tipoNave[LUNGHEZZA_MAX_STRINGA], int xPos, int yPos, char orientamento);
void stampaCampo(int campo[ALTEZZA_MAX_CAMPO][LARGHEZZA_MAX_CAMPO]);

int main ()
{

	char tipoNave[LUNGHEZZA_MAX_STRINGA];
	int xPos, yPos;
	char orientamento;

	char campo[ALTEZZA_MAX_CAMPO][LARGHEZZA_MAX_CAMPO] = {'';
	
	int navePiazzata;


    //prima yPos e poi xPos
    //ES: campo[3][4] = 1;

	while (scanf("%s %d %d %c", tipoNave, &xPos, &yPos, &orientamento) != EOF)
	{
#ifdef DEBUG
		int i;
		i = 0;

		printf("nave n^%d\n", i);
		printf("Dati letti:\n");
		printf("tipo: %s\n", tipoNave);
		printf("posizione: %d %d\n", xPos, yPos);
		printf("orientamento: %c\n", orientamento);

		i++;
#endif

        //piazza la nave
        navePiazzata = piazzaNave(tipoNave, xPos, yPos, orientamento); //ritorna 0 se non è riuscito a piazzare la nave
                                    //altrimenti ritorna 1
        
        //se il piazzamento non è riuscito 
        if (navePiazzata == 0)
        {
            //stmpa il messaggio di errore
            printf("errore di caricamento della nave: %s %d %d %c", tipoNave, xPos, yPos, orientamento)
            //termina il programma
        }//se invece è riuscito continua la lettura
        
        
        
        campo[yPos][xPos] = 1;
        stampaCampo(campo);

	}

	return EXIT_SUCCESS;
}

